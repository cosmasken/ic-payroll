{
  "canisters": {
    "backend": {
      "main": "canisters/backend/main.mo",
      "type": "motoko",
      "declarations": {
        "node_compatibility": true
      }
    },
    "assets": {
      "dependencies": [
        "backend",
        "internet-identity"
      ],
      "frontend": {
        "entrypoint": "dist/index.html"
      },
      "source": [
        "dist/"
      ],
      "type": "assets"
    },
    "internet-identity" : {
      "type": "pull",
      "id": "rdmx6-jaaaa-aaaaa-aaadq-cai"
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral"
    },
    "ic": {
      "providers": [
        "https://mainnet.dfinity.network"
      ],
      "type": "persistent"
    }
  },
  "output_env_file": ".env",
  "version": 1
}
